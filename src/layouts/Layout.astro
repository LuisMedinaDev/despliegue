---
interface Props {
	title: string;
}
const { title } = Astro.props;
import Header from "../components/landing/header.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-colorPrimario">
		 <Header /> 
		<main class="w-[95%] md:w-[85%] m-auto ">
			<slot/>
		</main>
	</body>
</html>
<style is:global>
	@media (width >= 768px) {
html {
    font-size: clamp(6px, .8vw, 15.6px);
}
}

@media (width <= 767px) {
html {
    font-size: clamp(6px, 2.2vw, 16px);
}
}
</style>
